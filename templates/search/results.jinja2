{% extends "layout.jinja2" %}

{% block content %}
    <div class="row">
        <div class="col-lg-10"><h3>{{ gettext("Searching for: <i>%(who)s</i>", who=who) }}</h3></div>
    </div>

    <br/>

    <div class="row">
        <div class="col-lg-10">
            {% for sound in results['sounds'] %}
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10">
        {% for account in results['accounts'] %}
            <div class="row_user">
                username: {{ account['username'] }}, name: {{ account['name'] }}, instance: {{ account['instance'] }}<br/>
                url: {{ account['url'] }}, remote: {{ account['remote'] }}, follow: {{ account['follow'] }}
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}
