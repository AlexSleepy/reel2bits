{% extends "layout.jinja2" %}

{% block content %}
    <div class="row">
        <div class="col-lg-10"><h3>{{ user.name }}'s profile</h3></div>
    </div>

    <div class="row">
        <div class="col-lg-10">
            See:&nbsp;<a href="{{ url_for('bp_users.profile', name=user.name) }}">all sounds</a>
        </div>
        <div class="col-lg-2">
            {% if current_user.is_authenticated %}
            <a class="btn btn-primary btn-xs" href="{{ url_for('bp_users.edit') }}">Edit profile</a>
            {% endif %}
        </div>
    </div>

    <hr>

    {% for sound in user.sounds %}
        <div class="row">
            <div class="col-lg-2">{# photo #}</div>
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-lg-7">
                        <i class="fa fa-play-circle" aria-hidden="true"></i>&nbsp;
                        <a href="{{ url_for("bp_sound.show", username=user.name, songslug=sound.slug) }}">{{ sound.title or sound.filename }}</a>
                    </div>
                    <div class="col-lg-2">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                        {{ duration_elapsed_human(sound.elapsed()) }}
                    </div>
                    <div class="col-lg-3">
                        {% if sound.sound_infos.first() %}
                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                            {{ duration_song_human(sound.sound_infos.one().duration) }}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">{# spectrogram #}</div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
