<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="_csrf" content="{{.CSRFToken}}" />
    <meta name="_suburl" content="{{AppSubURL}}" />

    <link rel="icon" href="{{AppSubURL}}/favicon.ico">

    <title>{{ .Title }} - reel2bits</title>

    <!-- Bootstrap core CSS -->
    <link href="{{AppSubURL}}/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{AppSubURL}}/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">

    {{if .PageIsGitxtView}}
    <link href="{{AppSubURL}}/highlight/github-gist.css" rel="stylesheet">
    {{end}}

    <!-- Custom styles for this template -->
    <link href="{{AppSubURL}}/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    {{if .PageIsTrackShow}}
        <meta content="{{AppName}}" property="og:site_name" />
        <meta content="object" property="og:type" />
        {{if .repoDescription}}
        <meta content="{{.track.Description}}" property="og:title" />
        <meta content="{{.track.Description}}" property="og:description" />
        {{else}}
        <meta content="Track {{.track.Title}} of {{.user.UserName}}" property="og:title" />
        <meta content="Track {{.track.Title}} of {{.user.UserName}}" property="og:description" />
        {{end}}
        <meta content="{{URLFor "track_show" ":userSlug" .user.Slug ":trackSlug" .track.Track.Slug }}" property="og:url" />
    {{else if .PageIsUserListTracks}}
        <meta property="og:url" content="{{URLFor "track_list" ":userSlug" .user.Slug}}">
        <meta property="og:type" content="profile">
        <meta property="og:site_name" content="{{AppName}}">
        <meta property="og:title" content="List of tracks for {{.user.UserName}} - {{AppName}}">
        <meta property="og:description" content="List of tracks for {{.user.UserName}} - {{AppName}}">
    {{else}}
        <meta property="og:url" content="{{AppURL}}">
        <meta property="og:site_name" content="{{AppName}}">
        <meta property="og:title" content="{{AppName}} - Upload and share sound tracks">
        <meta property="og:description" content="Upload and share sound tracks">
    {{end}}
</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">{{Gettext ("Toggle navigation")}}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{URLFor "home"}}">{{AppName}}</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {{if .IsLogged}}
                    <li><a href="{{URLFor "track_upload"}}">{{Gettext ("Upload Track")}}</a></li>
                    <li><a href="{{URLFor "track_list" ":userSlug" .LoggedUser.Slug}}">{{Gettext ("My tracks")}}</a></li>
                    <li><a href="{{URLFor "album_list" ":userSlug" .LoggedUser.Slug}}">{{Gettext ("My albums")}}</a></li>
                    <li><a href="{{URLFor "user_settings"}}">{{Gettext ("Settings")}}</a></li>
                    {{if .UserIsAdmin}}
                        <li><a href="{{URLFor "admin_dashboard"}}">{{Gettext ("Admin")}}</a></li>
                    {{end}}
                    <li><a href="{{URLFor "user_logout"}}">{{Gettext ("Logout")}}</a></li>
                {{else}}
                    {{if CanRegister}}
                        <li><a href="{{URLFor "user_register"}}">{{Gettext ("Register")}}</a></li>
                    {{end}}
                    <li><a href="{{URLFor "user_login"}}">{{Gettext ("Login")}}</a></li>
                {{end}}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    {{template "base/alert" .}}
