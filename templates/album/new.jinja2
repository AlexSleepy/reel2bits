{% extends "layout.jinja2" %}
{% import 'bootstrap/form.html' as bf4 %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-8">
            <h3>{{ gettext("New album") }}</h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-8">
            {{ bf4.render_form(form, action=url_for('bp_albums.new', username=current_user.name), horizontal_columns=('lg', 3, 7), form_type='horizontal', button_map={'submit': 'success'}) }}
        </div>
    </div>
{% endblock %}
